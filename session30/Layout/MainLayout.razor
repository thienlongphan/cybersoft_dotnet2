@inherits LayoutComponentBase
@* Header *@
<header>
    <nav class="navbar navbar-expand-lg" style="background-color: #ff5a5f;">
        <div class="container-fluid">
            <a class="navbar-brand text-white d-flex align-items-center" href="https://www.airbnb.com/" target="_blank">
                <svg width="1.25rem" viewBox="0 0 24 24" fill="currentColor" fill-opacity="0" stroke="currentColor"
                    stroke-width="1.5" focusable="false" aria-hidden="true" stroke-linecap="round"
                    stroke-linejoin="round">
                    <path
                        d="M12 18.7l-.4-.5a12.3 12.3 0 0 1-2.5-4.6c0-.6-.1-1.2 0-1.6 0-.4.2-.9.4-1.2A3 3 0 0 1 12 9.5c1 0 2 .5 2.5 1.3.2.3.4.8.4 1.2.1.4 0 1 0 1.6-.3 1.3-1.2 3-2.5 4.6l-.4.5z">
                    </path>
                    <path
                        d="M12 18.8c1 1.6 2.5 2.9 4.2 3.2h.7a4.3 4.3 0 0 0 4.2-5v-.2a74.7 74.7 0 0 0-6.4-13.2c-.6-1-1.5-1.7-2.7-1.7s-2.1.8-2.7 1.7A74.7 74.7 0 0 0 3 16.8v.2l-.2.8a4.3 4.3 0 0 0 4.8 4.3h.2c1.7-.4 3.1-1.7 4.2-3.3">
                    </path>
                </svg>
                <span class="ms-2">AirBNB</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <NavLink class="nav-link text-white" href="" Match="NavLinkMatch.All">Home</NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-white" href="feedback">Feedbacks</NavLink>
                    </li>
                    <li class="nav-item">
                        <NavLink class="nav-link text-white" href="about">About</NavLink>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

   
            @Body


@* Footer *@

<footer class="container mt-5 pb-3 text-secondary">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <p>This website takes multiple sources from TripAdvisor, Booking.com and AirBNB websites.</p>
            <p>© 2020 Airbnb, Inc. All rights reserved</p>
        </div>
        <div>
            <button  class="btn btn-link text-decoration-none">Back to top</button>
        </div>
    </div>
</footer>

@code {
    [Inject]
    private IJSRuntime JSRuntime { get; set; }

    @* Define function scroll to top *@
    private async Task ScrollToTop() 
    {
        await JSRuntime.InvokeVoidAsync("scrollToTop");
    }
}