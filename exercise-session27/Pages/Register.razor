@page "/register";

<div class="container">
    <div class="card shadow">
  
  <div class="card-body">
    <h1 class="fw-bold text-center">Course Registration form</h1>
    <EditForm Model="RegisterModel" OnValidSubmit="Submit">
        <DataAnnotationsValidator />
    <div class="form-group mb-3">
    <label for="fullname">Full name <span style="color: red;">*</span></label>
    <input type="text" class="form-control" id="fullname" placeholder="Full name" @bind-value="RegisterModel.FullName">
    <ValidationMessage For="() => RegisterModel.FullName" />

  </div>
  <div class="form-group mb-3">
    <label for="email">Email address <span style="color: red;">*</span></label>
    <input type="email" class="form-control" id="email" placeholder="name@example.com" @bind-value="RegisterModel.Email">
    <ValidationMessage For="() => RegisterModel.Email" />
  </div>

  <div class="form-group mb-3">
    <label for="phone">phone number  <span style="color: red;">*</span></label>
    <input type="text" class="form-control" id="phone" placeholder="phone number" @bind-value="RegisterModel.PhoneNumber">
    <ValidationMessage For="() => RegisterModel.PhoneNumber" />
  </div>
  <div class="form-group mb-3">
    <label for="course">Select course <span style="color: red;">*</span></label>
    <select class="form-control" id="service" @bind="RegisterModel.Course">
        <option value="">Choose...</option>
      <option value="html">HTML</option>
      <option value="css">CSS</option>
    </select>
    <ValidationMessage For="() => RegisterModel.Course" />
  </div>
  <div class="form-group mb-3">
    <label for="studyMode">Study Mode <span style="color: red;">*</span></label>
    <div>
        <MudRadioGroup @bind-Value="RegisterModel.StudyMode">
            <MudRadio Value="@("online")" Color="Color.Primary">Online</MudRadio>
            <MudRadio Value="@("offline")" Color="Color.Primary">Offline</MudRadio>
        </MudRadioGroup>
        <ValidationMessage For="() => RegisterModel.StudyMode" />
    </div>
  </div>
  <div class="form-group mb-3">
    <label for="startDate">Preferred StartDate <span style="color: red;">*</span></label>
    <MudDatePicker Label="" Editable="true" @bind-Date="@RegisterModel.StartDate" Placeholder="Select Start Date" Variant="Variant.Outlined" />
    <ValidationMessage For="() => RegisterModel.StartDate" />
  </div>
  <div class="form-group mb-3">
    <label for="comments">Comments or Notes</label>
    <textarea class="form-control" id="comments" rows="3" placeholder="Enter any additional information" @bind="RegisterModel.Comment"></textarea>
    
  </div>
  
  <div class="form-check form-check-inline mb-4 d-flex">
  <input class="form-check-input mr-2" type="checkbox" id="inlineCheckbox1" @bind-value="RegisterModel.Agree">
  <label class="form-check-label" for="inlineCheckbox1">I agree the terms and conditions <span style="color: red;">*</span></label>
  <ValidationMessage For="() => RegisterModel.Agree" />
</div>
<div>
  <button type="submit" class="btn btn-success w-100">Submmit</button>
  </div>
</EditForm>
  </div>
</div>
   
</div>

@code {
    private RegisterModel RegisterModel { get; set; } = new();

    private void Submit() 
    {
        Console.WriteLine(RegisterModel);
    }
}